<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_information"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:paddingLeft="@dimen/keyline_1_difference"
    android:paddingRight="@dimen/keyline_1_difference"
    android:paddingTop="@dimen/keyline_1_difference"
    android:paddingBottom="@dimen/keyline_1_difference"
    app:useDefaultMargins="true"
    app:columnCount="2"
    app:rowCount="8">

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorPrimaryDark"
        app:layout_columnSpan="2"
        app:layout_gravity="left"
        android:text="@string/information" />

    <TextView
        android:id="@+id/information_rated"
        android:text="@string/information_rated"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/information_movie_rated"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_700"
        tools:text="False"
        />

    <TextView
        android:id="@+id/information_in_theaters"
        android:text="@string/information_in_theaters"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/information_movie_in_theaters"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_700"
        tools:text="Aug 26, 2016" />

    <TextView
        android:id="@+id/information_genre"
        android:text="@string/information_genre"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/information_movie_genre"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_700"
        tools:text="Thriller" />

    <TextView
        android:id="@+id/information_director"
        android:text="@string/information_director"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/information_movie_director"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_700"
        tools:text="Fede Alvarez" />

    <TextView
        android:id="@+id/information_cast"
        android:text="@string/information_cast"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/information_movie_cast"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_700"
        android:layout_width="0dp"
        app:layout_gravity="fill_horizontal"
        tools:text="movie cast 1234567890 1234567890 1234567890" />

    <TextView
        android:id="@+id/information_run_time"
        android:text="@string/information_runtime"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/information_movie_run_time"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grey_700"
        tools:text="1h 28m" />


</android.support.v7.widget.GridLayout>